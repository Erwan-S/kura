<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" configuration-policy="require" enabled="true" immediate="true" modified="updated" name="org.eclipse.kura.example.modbus.ModbusManager">
   <implementation class="org.eclipse.kura.example.modbus.ModbusManager"/>
   <service>
      <provide interface="org.eclipse.kura.example.modbus.ModbusManager"/>
   </service>
   <property name="service.pid" value="org.eclipse.kura.example.modbus.ModbusManager"/>

   <reference bind="setModbusProtocolDeviceService" 
    		  cardinality="1..1" 
    		  interface="org.eclipse.kura.protocol.modbus.ModbusProtocolDeviceService" 
    		  name="ModbusProtocolDeviceService" 
    		  policy="static" 
    		  unbind="unsetModbusProtocolDeviceService"/>
   <reference bind="setCloudService" cardinality="1..1" interface="org.eclipse.kura.cloud.CloudService" name="CloudService" policy="static" unbind="(kura.service.pid=org.eclipse.kura.cloud.CloudService)unsetCloudService"/>
</scr:component>
